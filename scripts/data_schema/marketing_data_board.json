{
    "$id": "marketing_data_board.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCUXpresso SDK marketing board data schema",
    "description": "MCUXpresso SDK marketing board data schema",
    "version": "1.0.0",
    "allOf": [ { "$ref": "./definitions_schema.json#/definitions/commonMarketingDataType" } ],
    "properties": {
        "parts": {
            "type": "array",
            "description": "The board supported device parts",
            "items": {
                "$ref": "#/definitions/devicePartType"
            }
        },
        "kits": {
            "type": "array",
            "description": "The board supported kits",
            "items": {
                "$ref": "#/definitions/kitType"
            }
        }
    },
    "definitions": {
        "devicePartType": {
            "type": "object",
            "properties": {
                "device": {
                    "type": "string",
                    "description": "The device name"
                },
                "part_name": {
                    "type": "string",
                    "description": "The device part name"
                }
            }
        },
        "kitType": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "The kit id"
                }
            }
        }        
    }
}