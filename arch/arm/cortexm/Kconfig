    default y if MCUX_HW_FPV5_SP

config MCUX_PRJSEG_config.arm.core.cm33
    bool
    select CPU_CORTEX_M
    default y if MCUX_HW_CORE_CM33 && MCUX_HW_DSP && MCUX_HW_SAU

config MCUX_PRJSEG_config.arm.core.cm33_nodsp_nosau
    bool
    select CPU_CORTEX_M
    default y if MCUX_HW_CORE_CM33 && !MCUX_HW_DSP && !MCUX_HW_SAU

