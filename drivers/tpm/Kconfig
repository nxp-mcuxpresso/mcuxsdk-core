config MCUX_HAS_COMPONENT_driver.tpm
    bool
    default y if MCUX_HW_IP_DriverType_TPM

config MCUX_COMPONENT_driver.tpm
    bool "tpm"
    select MCUX_COMPONENT_driver.common
    depends on MCUX_HAS_COMPONENT_driver.tpm

if MCUX_COMPONENT_driver.tpm
    config TPM_TIMEOUT
        int "Max loops to wait tpm register write complete (0 means wait forever)"
        default 0
        help
            This is the maximum number of loops to wait for the tpm register write complete.
            If set to 0, it will wait indefinitely until the register write complete.
endif