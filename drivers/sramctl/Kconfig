config MCUX_HAS_COMPONENT_driver.sramctl
    bool
    default y if MCUX_HW_IP_DriverType_SRAMCTL

config MCUX_COMPONENT_driver.sramctl
    bool "Use driver sramctl"
    select MCUX_COMPONENT_driver.common
    depends on MCUX_HAS_COMPONENT_driver.sramctl
