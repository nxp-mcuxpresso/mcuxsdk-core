config MCUX_HAS_COMPONENT_driver.syspm
    bool
    default y if MCUX_HW_IP_DriverType_SYSPM

config MCUX_COMPONENT_driver.syspm
    bool "syspm"
    select MCUX_COMPONENT_driver.common
    depends on MCUX_HAS_COMPONENT_driver.syspm

if MCUX_COMPONENT_driver.syspm

    config EVENT_COUNT_STABLE_TIMEOUT
        int "Max loops to wait for SYSPM event count stable (0 means wait forever)"
        default 0

    config INSTRUCTION_COUNT_STABLE_TIMEOUT
        int "Max loops to wait for SYSPM instruction count stable (0 means wait forever)"
        default 0

endif