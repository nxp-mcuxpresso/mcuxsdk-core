config MCUX_DEPENDENCY_COMPONENT_driver.netc_rt1180
    bool
    default y if MCUX_HW_DEVICE_MIMXRT1189 || MCUX_HW_DEVICE_MIMXRT1187 ||\
                 MCUX_HW_DEVICE_MIMXRT1186 || MCUX_HW_DEVICE_MIMXRT1182 ||\
                 MCUX_HW_DEVICE_MIMXRT1181

config MCUX_DEPENDENCY_COMPONENT_driver.netc_imx95
    bool
    default y if MCUX_HW_DEVICE_MIMX9596 || MCUX_HW_DEVICE_MIMX9594 ||\
                 MCUX_HW_DEVICE_MIMX9586 || MCUX_HW_DEVICE_MIMX9576 ||\
                 MCUX_HW_DEVICE_MIMX9574 || MCUX_HW_DEVICE_MIMX9556 ||\
                 MCUX_HW_DEVICE_MIMX9554 || MCUX_HW_DEVICE_MIMX9546 ||\
                 MCUX_HW_DEVICE_MIMX9536 || MCUX_HW_DEVICE_MIMX9534 ||\
                 MCUX_HW_DEVICE_MIMX95N6 || MCUX_HW_DEVICE_MIMX95N4 ||\
                 MCUX_HW_DEVICE_MIMX9506

config MCUX_DEPENDENCY_COMPONENT_driver.netc_imx943
    bool
    default y if MCUX_HW_DEVICE_MIMX94398

config MCUX_HAS_COMPONENT_driver.netc
    bool
    default y if MCUX_HW_IP_DriverType_NETC

config MCUX_COMPONENT_driver.netc_rt1180
    bool
    depends on MCUX_DEPENDENCY_COMPONENT_driver.netc_rt1180

config MCUX_COMPONENT_driver.netc_imx95
    bool
    depends on MCUX_DEPENDENCY_COMPONENT_driver.netc_imx95

config MCUX_COMPONENT_driver.netc_imx943
    bool
    depends on MCUX_DEPENDENCY_COMPONENT_driver.netc_imx943

config MCUX_COMPONENT_driver.netc
    bool "netc"
    select MCUX_COMPONENT_driver.common
    select MCUX_COMPONENT_driver.netc_rt1180 if MCUX_DEPENDENCY_COMPONENT_driver.netc_rt1180
    select MCUX_COMPONENT_driver.netc_imx95 if MCUX_DEPENDENCY_COMPONENT_driver.netc_imx95
    select MCUX_COMPONENT_driver.netc_imx943 if MCUX_DEPENDENCY_COMPONENT_driver.netc_imx943
    depends on MCUX_HAS_COMPONENT_driver.netc

config MCUX_COMPONENT_driver.netc_switch
    bool "netc switch"
    default y
    depends on MCUX_COMPONENT_driver.netc
    depends on MCUX_DEPENDENCY_COMPONENT_driver.netc_rt1180 || MCUX_DEPENDENCY_COMPONENT_driver.netc_imx943

config MCUX_COMPONENT_driver.netc_phywrapper
    bool "netc phy wrapper"
    default y
    depends on MCUX_COMPONENT_driver.netc
    depends on MCUX_DEPENDENCY_COMPONENT_driver.netc_imx95 || MCUX_DEPENDENCY_COMPONENT_driver.netc_imx943

config MCUX_COMPONENT_driver.netc_msg
    bool "netc VSI-PSI message"
    depends on MCUX_COMPONENT_driver.netc
    depends on MCUX_DEPENDENCY_COMPONENT_driver.netc_imx95
